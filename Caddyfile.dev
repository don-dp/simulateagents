{
    auto_https off
}

:80 {
    encode gzip

    handle_path /static/* {
        root * /static
        file_server
    }

    reverse_proxy web:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
}
